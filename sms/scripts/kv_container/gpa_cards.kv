<GpaCardsView>:
    DataViewer2:
        id: dv
        cols: 8
        padding_x: dp(10)
        weightings: [.1, .3, .1, .1, .1, .1, .1, .1]
        headers: ['Matno', 'Full Names (Surname Last)', '100 Level', '200 Level', '300 Level', '400 Level', '500 Level', 'Cummulative GPA']
        _data: root.data

<GpaCardsPopup>:
    title: 'GPA Cards'
    size_hint: .25, None
    height: box.height + dp(50)
    BoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(20)
        spacing: dp(10)
        GridLayout:
            cols: 2
            spacing: (10, 5)
            size_hint_y: None
            height: self.minimum_height
#            size_hint_y: .8
#            height: dp(35)
            row_default_height: 30
            row_force_default: True
            CustomLabel:
                text: 'Academic session'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomTextInput:
                id: session
                size_hint_x: .4
                input_filter: 'int'
                max_length: 4
            CustomLabel:
                text: 'Level'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: level
                size_hint_x: .4
                values: ['100', '200', '300', '400', '500', '600']
                valign: 'middle'
            CustomLabel:
                text: 'Order By'
                size_hint_x: .6
                halign: 'left'
                valign: 'middle'
            CustomSpinner:
                id: order_by
                size_hint_x: .4
                values: ['CGPA', 'Level GPA']
                text: self.values[0]
                valign: 'middle'
        Button:
            text: 'Search'
            size_hint: 1, None
            height: dp(35)
            on_press: root.get()
