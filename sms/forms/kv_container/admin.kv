<Administrator>:
    BoxLayout:
        padding: dp(10)

        Label:
            size_hint_x: .6

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .4
            MenuButton:
                text: "Start new academic session"
                on_press: root.migrate_session()
            MenuButton:
                text:"Accounts"
                on_press:
                    root.manager.current = 'accounts'
            MenuButton:
                text:"Backups"
                on_press:
                    root.manager.current = 'backups'
            MenuButton:
                text:"Manage courses"
                on_press:
                    root.manager.current = 'course_mgmt'
            MenuGrid:
                id: grid
                cols: 2
                text: 'Result Edit'
                on_press: root.set_results_edit()
                Label:
                Switch:
                    id: result_switch
                    size_hint: .3, 1
                    disabled: True
            MenuButton:
                text:"Admin info"
                on_press:
                    root.manager.current = 'admin_info'
            MenuButton:
                text:"Handover"
                on_press:
                    root.manager.current = 'handover'
            Label:

<MenuGrid@GridLayout+MenuButton>:
    size_hint_y: None

<MenuSpinner@Spinner+MenuButton>:
    size_hint_y: None
