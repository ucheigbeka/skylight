<PersonalInfo>:
    mat_no: mat_no.text
	canvas.before:
		Rectangle:
			size: self.size
			pos: self.pos
			source: os.path.join(root.form_root, 'resc', 'images', 'unibengate.jpg')
	BoxLayout:
		orientation: 'vertical'
		padding_x: 10

        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color:
                    rgba: (0,0,0,.4)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'Personal Information'
                font_size: 20
                halign: 'center'
                valign: 'middle'
                markup: True
                size_hint_x: .9

            ImageButton:
                size_hint_x: .1
                source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-back-64.png')
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'main_page'

		BoxLayout:
		    padding: 10

		    ScrollView:
                do_scroll: True

                GridLayout:
                    id: grid
                    cols: 2
                    padding: 20
                    size_hint: (.4, None)
                    height: self.minimum_height
                    spacing: (10, 5)
                    row_default_height: 30
                    row_force_default: True
                    pos_hint: {'top': 1}
                    CustomLabel:
                        text: 'Mat number'
                        halign: 'left'
                    BoxLayout:
                        spacing: 20
                        CustomTextInput:
                            id: mat_no
                            width: 125
                            text: 'ENG'
                            max_length: 10
                        ImageButton:
                            size_hint_x: None
                            width: 50
                            source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-search-48.png')
                            on_press: root.search()
                        ImageButton:
                            size_hint_x: None
                            width: 50
                            source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-delete-48.png')
                            on_press: root.clear_fields()
                    CustomLabel:
                        text: 'Surname'
                        halign: 'left'
                    CustomTextInput:
                        id: surname
                    CustomLabel:
                        text: 'First name'
                        halign: 'left'
                        pos_hint: {'x': 1}
                    CustomTextInput:
                        id: fname
                    CustomLabel:
                        text: 'Middle name'
                        halign: 'left'
                    CustomTextInput:
                        id: mname
                    CustomLabel:
                        text: 'Mode of entry'
                        halign: 'left'
                    CustomSpinner:
                        id: mode_of_entry
                        values: ['PUTME', 'DE (200)', 'DE (300)']
                    CustomLabel:
                        text: 'Session admitted'
                        halign: 'left'
                    CustomTextInput:
                        id: session_admit
                        max_length: 4
                        input_filter: 'int'
                        width: 100
                    CustomLabel:
                        text: 'Current level'
                        halign: 'left'
                    CustomSpinner:
                        id: cur_level
                        values: ['100', '200', '300', '400', '500']
                    CustomLabel:
                        text: 'Sex'
                        halign: 'left'
                    CustomSpinner:
                        id: sex
                        values: 'Male', 'Female'
                    CustomLabel:
                        text: 'Date of birth'
                        halign: 'left'
                    DatePicker:
                        id: dob
						size_hint_x: None
						width: 100
                    CustomLabel:
                        text: 'State of origin'
                        halign: 'left'
                    CustomTextInput:
                        id: state_of_origin
                        width: 100
                    CustomLabel:
                        text: 'Phone number'
                        halign: 'left'
                    CustomTextInput:
                        id: phone_no
                        width: 125
                        input_filter: 'int'
                        max_length: 11
                    CustomLabel:
                        text: 'Email Address'
                        halign: 'left'
                    CustomTextInput:
                        id: email
                    CustomLabel:
                        text: 'Sponsor\'s phone number'
                        halign: 'left'
                    CustomTextInput:
                        id: s_phone_no
                        width: 125
                        input_filter: 'int'
                        max_length: 11
                    CustomLabel:
                        text: 'Sponsor\'s email'
                        halign: 'left'
                    CustomTextInput:
                        id: s_email
                    CustomLabel:
                        text: 'Graduated'
                        halign: 'left'
                    CustomSpinner:
                        id: grad
                        values: ['Yes', 'No']

			CustomLabel:
		    	text: 'Passport'
			    size_hint: (None, None)
			    height: grid.minimum_height
			    valign: 'top'
				halign: 'center'
				pos_hint: {'top': 1}
            FloatLayout:
                size_hint: (.2, None)
                height: grid.minimum_height
                pos_hint: {'top': 1}
				Image:
					id: passport
					size_hint: (None, None)
					size: (117, 160)
					pos_hint: {'top': 1, 'x': 0}
					on_touch_down: root.load_image(*args)
					source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-edit-profile-480.png')
			FloatLayout:
				size_hint_x: .3

		BoxLayout:
			size_hint: (None, .1)
			width: 200
			pos_hint: {'center_x': .5}
			spacing: 20
			ImageButton:
				size_hint_x: None
				width: 50
				source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-add-48.png')
				on_press: root.add()
			ImageButton:
				size_hint_x: None
				width: 50
				source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-cancel-48.png')
				on_press: root.cancel()
