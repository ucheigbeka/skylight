#: import os os
#: import Window kivy.core.window.Window
#: import CustomTextInput sms.utils.textinput.CustomTextInput
#: import ImageButton sms.utils.imagebutton.ImageButton
#: import CustomLabel sms.utils.label.CustomLabel

<CustomSpinner@Spinner>:
	size_hint_x: None

<PersonalInfo>:
	ScrollView:
		size_hint: (None, None)
		size: Window.size
		effect_cls: 'ScrollEffect'
		canvas.before:
			Rectangle:
				size: self.size
				pos: self.pos
				source: os.path.join(root.form_root, 'resc', 'images', 'unibengate.jpg')
		BoxLayout:
		    size: root.width, root.height
			orientation: 'vertical'
			padding_x: 10
			size_hint: (None, None)

            BoxLayout:
                size_hint_y: None
                height: 50
                canvas.before:
                    Color:
                        rgba: (0,0,0,.4)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text: 'Personal Information'
                    font_size: 20
                    halign: 'center'
                    valign: 'middle'
                    markup: True
                    size_hint_x: .9

                ImageButton:
                    size_hint_x: .1
                    source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-back-64.png')
                    on_press: app.root.current = 'main_page'

			BoxLayout:
			    padding: 10

			    ScrollView:
                    do_scroll: True

                    GridLayout:
                        id: grid
                        cols: 2
                        padding: 20
                        size_hint: (.4, None)
                        height: self.minimum_height
                        spacing: (10, 5)
                        row_default_height: 30
                        row_force_default: True
                        pos_hint: {'top': 1}
                        CustomLabel:
                            text: 'Mat number'
                            halign: 'left'
                        BoxLayout:
                            spacing: 20
                            CustomTextInput:
                                width: 125
                                text: 'ENG'
                                max_length: 10
                            ImageButton:
                                size_hint_x: None
                                width: 50
                                source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-search-48.png')
                                on_press: root.search
                        CustomLabel:
                            text: 'Surname'
                            halign: 'left'
                        CustomTextInput:
                        CustomLabel:
                            text: 'First name'
                            halign: 'left'
                            pos_hint: {'x': 1}
                        CustomTextInput:
                        CustomLabel:
                            text: 'Middle name'
                            halign: 'left'
                        CustomTextInput:
                        CustomLabel:
                            text: 'Mode of entry'
                            halign: 'left'
                        CustomSpinner:
                            values: ['PUTME', 'DE (200)', 'DE (300)']
                        CustomLabel:
                            text: 'Session admitted'
                            halign: 'left'
                        CustomTextInput:
                            max_length: 4
                            width: 100
                        CustomLabel:
                            text: 'Current level'
                            halign: 'left'
                        CustomSpinner:
                            values: ['100', '200', '300', '400', '500']
                        CustomLabel:
                            text: 'Sex'
                            halign: 'left'
                        CustomSpinner:
                            values: 'Male', 'Female'
                        CustomLabel:
                            text: 'Date of birth'
                            halign: 'left'
                        CustomTextInput:
                            hint_text: '9/23/2019'
                        CustomLabel:
                            text: 'State of origin'
                            halign: 'left'
                        CustomTextInput:
                            width: 100
                        CustomLabel:
                            text: 'Phone number'
                            halign: 'left'
                        CustomTextInput:
                            width: 125
                            input_filter: 'int'
                            max_length: 11
                        CustomLabel:
                            text: 'Email Address'
                            halign: 'left'
                        CustomTextInput:
                        CustomLabel:
                            text: 'Sponsor\'s phone number'
                            halign: 'left'
                        CustomTextInput:
                            width: 125
                            input_filter: 'int'
                            max_length: 11
                        CustomLabel:
                            text: 'Sponsor\'s email'
                            halign: 'left'
                        CustomTextInput:
                        CustomLabel:
                            text: 'Graduated'
                            halign: 'left'
                        CustomSpinner:
                            values: ['Yes', 'No']

				FloatLayout:
					size_hint: (.2, None)
					height: grid.minimum_height
					pos_hint: {'top': 1}
					CustomLabel:
				    	text: 'Passport'
					    size_hint: (None, None)
					    height: grid.minimum_height
					    valign: 'top'
    					halign: 'left'
	    				pos_hint: {'top': 1, 'x': 1}
					Image:
						id: passport
						size_hint: (None, None)
						size: (117, 160)
						pos_hint: {'top': 1, 'x': 1}
						on_touch_down: root.load_image(*args)
						source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-edit-profile-480.png')
				FloatLayout:
					size_hint_x: .3

			BoxLayout:
				size_hint: (None, .1)
				width: 200
				pos_hint: {'center_x': .5}
				spacing: 20
				ImageButton:
					size_hint_x: None
					width: 50
					source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-add-48.png')
					on_press: root.add
				ImageButton:
					size_hint_x: None
					width: 50
					source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-cancel-48.png')
					on_press: root.cancel
