<PersonalInfo>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        BoxLayout:

            ScrollView:
                do_scroll: True

                GridLayout:
                    id: grid
                    cols: 2
                    padding: dp(20)
                    size_hint: (.4, None)
                    height: self.minimum_height
                    spacing: dp(10), dp(5)
                    row_default_height: dp(30)
                    row_force_default: True
                    pos_hint: {'top': 1}
                    CustomLabel:
                        text: 'Mat number'
                        halign: 'left'
                    BoxLayout:
                        spacing: dp(20)
                        CustomTextInput:
                            id: mat_no
                            width: dp(125)
                            text: 'ENG'
                            max_length: 10
                        ImageButton:
                            size_hint_x: None
                            width: dp(50)
                            source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-search-48.png')
                            on_press: root.search()
                        ImageButton:
                            size_hint_x: None
                            width: dp(50)
                            source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-delete-48.png')
                            on_press: root.clear_fields()
                    CustomLabel:
                        text: 'Surname'
                        halign: 'left'
                    CustomTextInput:
                        id: surname
                    CustomLabel:
                        text: 'First name'
                        halign: 'left'
                    CustomTextInput:
                        id: fname
                    CustomLabel:
                        text: 'Middle name'
                        halign: 'left'
                    CustomTextInput:
                        id: mname
                    CustomLabel:
                        text: 'Mode of entry'
                        halign: 'left'
                    CustomSpinner:
                        id: mode_of_entry
                    CustomLabel:
                        text: 'Session admitted'
                        halign: 'left'
                    CustomTextInput:
                        id: session_admit
                        max_length: 4
                        input_filter: 'int'
                        width: dp(100)
                    CustomLabel:
                        text: 'Current level'
                        halign: 'left'
                    CustomSpinner:
                        id: level
                        disabled: False if not root.manager else not root.manager.is_admin
                    CustomLabel:
                        text: 'Transfer'
                        halign: 'left'
                    CustomSpinner:
                        id: transfer
                        values: 'Yes', 'No'
                    CustomLabel:
                        text: 'Sex'
                        halign: 'left'
                    CustomSpinner:
                        id: sex
                        values: 'Male', 'Female'
                    CustomLabel:
                        text: 'Date of birth'
                        halign: 'left'
                    DatePicker:
                        id: dob
                        size_hint_x: None
                        width: dp(100)
                    CustomLabel:
                        text: 'State of origin'
                        halign: 'left'
                    CustomTextInput:
                        id: state_of_origin
                        width: dp(100)
                    CustomLabel:
                        text: 'LGA of origin'
                        halign: 'left'
                    CustomTextInput:
                        id: lga_of_origin
                        width: dp(150)
                    CustomLabel:
                        text: 'Phone number'
                        halign: 'left'
                    CustomTextInput:
                        id: phone_no
                        width: dp(125)
                        max_length: 11
                    CustomLabel:
                        text: 'Email Address'
                        halign: 'left'
                    CustomTextInput:
                        id: email
                    CustomLabel:
                        text: 'Sponsor\'s phone number'
                        halign: 'left'
                    CustomTextInput:
                        id: s_phone_no
                        width: dp(125)
                        max_length: 11
                    CustomLabel:
                        text: 'Sponsor\'s email'
                        halign: 'left'
                    CustomTextInput:
                        id: s_email
                    CustomLabel:
                        text: 'Graduated'
                        halign: 'left'
                    CustomSpinner:
                        id: grad
                        text: 'No'
                        values: ['Yes', 'No']
                        disabled: False if not root.manager else not (root.manager.is_admin == 1)
                    CustomLabel:
                        text: 'Session graduated'
                        halign: 'left'
                    CustomTextInput:
                        id: session_grad
                        max_length: 4
                        input_filter: 'int'
                        width: dp(100)
                        disabled: True if (not root.manager) else (not root.manager.is_admin)
                    CustomLabel:
                        text: 'Optional Courses'
                        halign: 'left'
                    BoxLayout:
                        spacing: dp(10)
                        CustomTextInput:
                            id: option_1
                            width: dp(125)
                            disabled: True if (not root.manager) else (not root.manager.is_admin)
                        CustomTextInput:
                            id: option_2
                            width: dp(125)
                            disabled: True if (not root.manager) else (not root.manager.is_admin)

            CustomLabel:
                text: 'Passport'
                size_hint: (None, None)
                height: grid.minimum_height
                valign: 'top'
                halign: 'center'
                pos_hint: {'top': 1}
            FloatLayout:
                size_hint: (.2, None)
                height: grid.minimum_height
                pos_hint: {'top': 1}
                Image:
                    id: passport
                    size_hint: (None, None)
                    size: dp(117), dp(160)
                    pos_hint: {'top': 1, 'x': 0}
                    on_touch_down: root.load_image(*args)
            FloatLayout:
                size_hint_x: .3

        BoxLayout:
            size_hint: (None, .1)
            padding: dp(0), dp(10)
            width: dp(600)
            pos_hint: {'center_x': .5}
            spacing: dp(20)
            PositiveActionButton:
                id: btn_positive
                size_hint_x: None
                width: dp(200)
                text: 'Add'
                on_press: root.add_update()
            NegativeActionButton:
                id: delete
                size_hint_x: None
                width: dp(200)
                text: 'Delete'
                on_press: root.delete()
