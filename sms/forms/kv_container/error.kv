#: import os os
#: import Window kivy.core.window.Window


<Error>:
    ScrollView:
		size_hint: (None, None)
		size: Window.size
		effect_cls: 'ScrollEffect'
		canvas.before:
			Rectangle:
				size: self.size
				pos: self.pos
				source: os.path.join(root.form_root, 'resc', 'images', 'unibengate.jpg')

        FloatLayout:
            size: root.width, root.height

            BoxLayout:
                pos_hint: {'top': 1}
                size_hint_y: .2
                height: 80
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: (0,0,0,.20)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    size_hint_y: .12

                    Label:
                        text: "Department of Mechanical Engineering"
                        bold: True
                        halign: 'center'
                        font_size: 35
                        size_hint_x: .9

                    ImageButton:
                        size_hint_x: .1
                        source: os.path.join(root.form_root, 'resc', 'icons', 'icons8-back-64.png')
                        on_press: app.root.current = 'main_page'

                Label:
                    text: "University of Benin, Nigeria"
                    halign: 'center'
                    font_size: 30
                    size_hint_y: .08

            BoxLayout:
                pos_hint: {'bottom': 1}
                size_hint_y: .8

                BoxLayout:
                    size_hint_x: .24
                    orientation: 'vertical'

                    Label:
                        size_hint_y: .09

                    CustomLabel:
                        text: "Error"
                        halign: 'right'
                        valign: 'center'
                        padding: 35,1
                        font_size: 35
                        size_hint_y: .11
                        size_hint_x: .6
                        canvas.before:
                            Color:
                                rgba: (0,0,0,.20)
                            Rectangle:
                                size: self.size
                                pos: self.pos

                    Label:
                        size_hint_y: 0.8

                BoxLayout:
                    size_hint_x: .4
                    size_hint_y: .2
                    pos_hint: {'center_y':0.5, 'x': .5}

                    CustomLabel:
                        text: "Sorry this page does not exist yet"
                        halign: 'left'
                        valign: 'center'
                        padding: 20,10
                        size_hint_x: 1
                        font_size: 30
                        canvas.before:
                            Color:
                                rgba: (0,0,0,.20)
                            Rectangle:
                                size: self.size
                                pos: self.pos
